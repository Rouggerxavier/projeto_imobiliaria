PORT=8000
LOG_LEVEL=info

# === LLM CONFIG ===
# Prioridade: Google Gemini (OpenAI compat) > OpenAI/OpenRouter > Groq/Ollama

# OPÇÃO 1: Google Gemini via endpoint compatível com OpenAI
# Gere sua chave em: https://aistudio.google.com/apikey
OPENAI_API_KEY=your_gemini_key_here
OPENAI_MODEL=gemini-2.5-flash
OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# OPÇÃO 2: Groq (recomendado - gratuito e estável)
# Gere sua chave em: https://console.groq.com/keys
# Descomente as linhas abaixo e comente as do Gemini acima
# GROQ_API_KEY=your_groq_key_here
# GROQ_MODEL=llama-3.3-70b-versatile

# LLM habilitado? (true=usa LLM, false=só fallback)
USE_LLM=true

# Timeout da chamada LLM (segundos). Aumente para LLM local em CPU.
LLM_TIMEOUT=120

# === LLM LOCAL (Ollama) - Opcional ===
# Mantem o modelo carregado apos chamadas (ex.: 30m).
LLM_KEEP_ALIVE=30m
# Contexto menor = menos RAM e mais velocidade.
LLM_NUM_CTX=2048
# Use mais threads da CPU (ajuste conforme sua maquina).
LLM_NUM_THREADS=8
# mmap ajuda a reduzir pico de RAM (Windows pode variar).
LLM_USE_MMAP=true
# Faz pre-warm no startup para evitar cold start na 1a requisicao.
LLM_PREWARM=false

# === WHATSAPP CONFIG ===
# Token de verificação para webhook do WhatsApp
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
# ID do número de telefone do WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
# ID da conta do WhatsApp Business
ID_CONTA_WPP_BUSINESS=your_business_account_id_here
# Token de acesso do WhatsApp
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here

# Modo apenas triagem (sem busca/listagem de imóveis)
TRIAGE_ONLY=true
